{
  "manifest_version": 3,
  "name": "Digital Footprints",
  "version": "1.0.0",
  "description": "Keeps track of time spent on the Internet and blocks sites after time limits",
  "icons": {
    "128": "icons/digital-footprint.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/digital-footprint.png"
    },
    "default_title": "Digital Footprints"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["tabs", "storage", "scripting", "webNavigation"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["blocked.html", "blocked.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
